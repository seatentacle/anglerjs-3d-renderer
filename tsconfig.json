{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "lib": [
      "ES6",
      "DOM"
    ],
    "outDir": "dist/",
    "baseUrl": "./",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "paths": {
      "animations/*": ["src/animations/*"],
      "components/*": ["src/components/*"],
      "constants/*": ["src/constants/*"],
      "hooks/*": ["src/hooks/*"],
      "lib/*": ["src/lib/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
